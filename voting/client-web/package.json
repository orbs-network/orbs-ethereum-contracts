{
  "name": "orbs-voting-client",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://orbs-network.github.io/voting",
  "dependencies": {
    "@date-io/date-fns": "^2.8.0",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/lab": "^4.0.0-alpha.56",
    "axios": "^0.19.2",
    "classnames": "^2.2.6",
    "eslint": "^7.13.0",
    "i18next": "^19.3.3",
    "ip-address": "^6.2.0",
    "material-table": "^1.69.1",
    "mobx": "^5.15.4",
    "mobx-react": "^6.2.2",
    "moment": "^2.29.1",
    "notistack": "^0.9.17",
    "orbs-pos-data": "^6.20.0",
    "query-string": "^6.13.7",
    "rc-progress": "^3.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hanger": "^2.2.1",
    "react-i18next": "^11.3.3",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.0",
    "styled-components": "^5.2.1",
    "ts-jest": "^25.2.1",
    "ts-retry-promise": "^0.6.0",
    "use-query-params": "^0.6.0",
    "web3": "1.2.11"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^10.0.1",
    "@types/chance": "^1.0.9",
    "@types/ip-address": "^5.8.2",
    "@types/jest": "^25.1.4",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/react-router-dom": "^5.1.6",
    "chance": "^1.1.4",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.0",
    "jest-expect-message": "^1.0.2",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.0.8",
    "prettier": "^2.1.2",
    "react-test-renderer": "^16.13.0",
    "typescript": "^4.0.5"
  },
  "scripts": {
    "prestart": "node ./harness.js",
    "postinstall": "npm run contracts:prod",
    "start": "react-scripts start",
    "start-localProd": "REACT_APP_FORCE_PROD=true react-scripts start",
    "build": "react-scripts build",
    "test": "jest --config ./src/__tests__/jest.config.js",
    "test:ci": "jest --config ./src/__tests__/jest.config.js",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "test:coverage": "react-scripts test --watchAll=false --coverage",
    "eject": "react-scripts eject",
    "lint": "prettier --single-quote --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build --repo git@github.com:orbs-network/voting.git",
    "contracts:local": "./scripts/update-contracts-info.js",
    "contracts:prod": "./scripts/copy-contracts.sh"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 120
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:ci"
    }
  },
  "eslintConfig": {
    "extends": "react-app",
    "plugins": [
      "react-hooks"
    ],
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": 0
    }
  },
  "jest-junit": {
    "outputDirectory": "_reports",
    "outputName": "results.xml"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}

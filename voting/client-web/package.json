{
  "name": "orbs-voting-client",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://orbs-network.github.io/voting",
  "dependencies": {
    "@material-ui/core": "^4.9.7",
    "@material-ui/lab": "^4.0.0-alpha.46",
    "axios": "^0.19.2",
    "classnames": "^2.2.6",
    "i18next": "^19.3.3",
    "ip-address": "^6.2.0",
    "orbs-pos-data": "^6.11.0",
    "query-string": "^6.11.1",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-hanger": "^2.1.3",
    "react-i18next": "^11.3.3",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "ts-jest": "^25.2.1",
    "use-query-params": "^0.6.0",
    "web3": "1.2.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^10.0.1",
    "@types/chance": "^1.0.9",
    "@types/ip-address": "^5.8.2",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.2",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-router-dom": "^5.1.3",
    "chance": "^1.1.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^2.5.0",
    "husky": "^4.2.3",
    "jest-expect-message": "^1.0.2",
    "jest-junit": "^10.0.0",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "react-test-renderer": "^16.13.0",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "prestart": "node ./harness.js",
    "postinstall": "npm run contracts:prod",
    "start": "react-scripts start",
    "start-localProd": "REACT_APP_FORCE_PROD=true react-scripts start",
    "build": "react-scripts build",
    "test": "jest --config ./src/__tests__/jest.config.js",
    "test:ci": "jest --config ./src/__tests__/jest.config.js",
    "test:debug": "react-scripts --inspect-brk test --runInBand --no-cache",
    "test:coverage": "react-scripts test --watchAll=false --coverage",
    "eject": "react-scripts eject",
    "lint": "prettier --single-quote --write 'src/**/*.{js,jsx,ts,tsx,json,css,scss,md}'",
    "deploy": "npm run build && ./scripts/deploy.sh",
    "contracts:local": "./scripts/update-contracts-info.js",
    "contracts:prod": "./scripts/copy-contracts.sh"
  },
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "jsxSingleQuote": true,
    "printWidth": 120
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test:ci"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "jest-junit": {
    "outputDirectory": "_reports",
    "outputName": "results.xml"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
